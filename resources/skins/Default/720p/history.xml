<window type="window">
    <defaultcontrol>1110</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="image">
            <description>background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>bg.png</texture>
        </control>
        <control type="image" id="1101">
            <description>channel-icon</description>
            <posx>20</posx>
            <posy>20</posy>
            <width>36</width>
            <height>36</height>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="label" id="1102">
            <description>channel-title</description>
            <posx>65</posx>
            <posy>20</posy>
            <width>340</width>
            <height>60</height>   
            <font>font30</font>
            <textcolor>ff005194</textcolor>
            <align>left</align>
            <aligny>top</aligny>
        </control>
        <control type="panel" id="1110">
            <description>content</description>
            <posx>140</posx>
            <posy>100</posy>
            <width>1000</width>
            <height>540</height>
            <viewtype>list</viewtype>
            <onleft>910</onleft>
            <preloaditems>10</preloaditems>
            <onup>-</onup>
            <ondown>-</ondown>
            <itemlayout width="250" height="180">
                <control type="image">
                    <posx>10</posx>
                    <posy>10</posy>
                    <width>208</width>
                    <height>117</height>        
                    <info>ListItem.Icon</info>
                    <aspectratio>stretch</aspectratio>
                </control>    
                <control type="label">
                    <posx>0</posx>
                    <posy>120</posy>
                    <width>208</width>
                    <height>60</height>   
                    <font>font16</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>80000000</shadowcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="250" height="180">
                <control type="image">
                    <posx>10</posx>
                    <posy>10</posy>
                    <width>208</width>
                    <height>117</height>        
                    <info>ListItem.Icon</info>
                    <aspectratio>stretch</aspectratio>
                </control>   
                <control type="image">
                    <posx>6</posx>
                    <posy>6</posy>
                    <width>216</width>
                    <height>125</height>        
                    <texture>border-other.png</texture>
                    <aspectratio>stretch</aspectratio>
                </control>     
                <control type="label">
                    <posx>0</posx>
                    <posy>120</posy>
                    <width>208</width>
                    <height>60</height>   
                    <font>font16</font>
                    <textcolor>ff0080ff</textcolor>
                    <shadowcolor>80000000</shadowcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>

